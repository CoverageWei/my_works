) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COMMENT='爱多思 问卷题目关联表' /* BF=questionnaire_id, POLICY=eduos_user, STARTID=8001, ASSIGNIDTYPE=USB */;


