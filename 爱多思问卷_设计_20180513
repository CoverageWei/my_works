`statistics_status` smallint(2) NOT NULL COMMENT '统计状态, 1 计入统计, 2 不统计',
`anonymous_flag` tinyint(4) DEFAULT NULL COMMENT '本次提交是否匿名, 0 非匿名, 1 匿名',
PRIMARY KEY (`id`),
